<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <!--Thank you tutlane.com from your example in using the scrollview https://www.tutlane.com/tutorial/android/android-scrollview-horizontal-vertical-with-examples-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Header"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"

            android:text="@string/tartunatiedot_header"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/HeaderYhteensa"
            android:layout_width="178dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"

            android:text="Yhteensä Suomessa"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/InfectedCountView"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/border"
            android:text="@string/total_info"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/HeaderMaakunnittain"
            android:layout_width="178dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"

            android:text="Maakunnittain"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/maakunnat_spinner"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/InfectedMaakuntaView"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/border"
            android:text="@string/maakunta_info"
            android:textAlignment="center"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/InfoView"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/border"
            android:text="Tartuntamäärät varmistettuja, testattuja tartuntoja. Todellinen määrä voi olla jopa 20-30 -kertainen. \n\nLähde: THL"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/ThlLogoView"
            android:layout_width="124dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="Logo of THL"
            app:srcCompat="@drawable/thllogo" />

        <TextView
            android:id="@+id/ClickLogoView"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="Lisää tietoa painamalla logoa"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="10sp" />
    </LinearLayout>

</ScrollView>